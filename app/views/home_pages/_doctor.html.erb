<div class="container-fluid">

  <div class="col-md-6">
    <div class="container">
      <h4>Add clinics to your profile <%= link_to "click here", doctor_clinic_index_path %> </h4>
      <h4>Add specializations to your profile <%= link_to "click here", doctor_specialization_index_path %> </h4>
    </div>

  </div>

  <div class="col-md-6">

    <h3>your appointment details </h3>

    <table class="table table-responsive table-hover">
      <thead>
        <tr>
          <th>Clinic</th>
          <th>Patient</th>
          <th>Appointment time</th>
          <th>Description</th>
          <th>status</th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.clinic.name %></td>
            <td><%= appointment.name %></td>
            <td><%= appointment.appointment_time %></td>
            <td><%= appointment.description %></td>
            <% if appointment.doctor.id == current_doctor.id %>
              <% if appointment.cancel == true %>
                <td><small> cancelled </small></td>
              <% else %>
                <td><%= link_to "cancel", controller: "appointments", action: "cancel_appointment", id: appointment %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
